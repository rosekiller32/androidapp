<?xml version="1.0" encoding="utf-8"?>
<TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <!--android:background="#FF0000"-->
    <!--android:stretchColumns="1"-->

    <TableRow>

        <TextView
            android:id="@+id/layout1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="產品編號" />

    </TableRow>

    <TableRow>
        <TextView
            android:id="@+id/layout2_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="產品名稱" />

        <EditText
            android:id="@+id/screen2_editText2_2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:inputType="text"
            android:hint="Type name"/>

    </TableRow>

    <TableRow>
        <TextView
            android:id="@+id/layout3_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="產品性質" />

        <CheckBox
            android:id="@+id/screen2_checkBox3_2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:onClick="onCheckboxClicked"
            android:text="衍生性" />

        <CheckBox
            android:id="@+id/screen2_checkBox3_3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:onClick="onCheckboxClicked"
            android:text="開發性" />

    </TableRow>

    <TableRow>
        <TextView
            android:id="@+id/layout4_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="產品成本" />

        <EditText
            android:id="@+id/screen2_editText4_2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:inputType="text" />

    </TableRow>

    <TableRow>
        <TextView
            android:id="@+id/layout5_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="製造者" />

        <EditText
            android:id="@+id/screen2_editText5_2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:inputType="text" />

    </TableRow>

    <TableRow>
        <TextView
            android:id="@+id/layout6_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="公司名稱" />

        <EditText
            android:id="@+id/screen2_editText6_2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:inputType="text" />

    </TableRow>
    <TableRow>
        <TextView
            android:id="@+id/layout7_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="公司行號" />

        <EditText
            android:id="@+id/screen2_editText7_2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:inputType="text" />

    </TableRow>
    <TableRow>
        <TextView
            android:id="@+id/layout8_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="構想日期" />

        <EditText
            android:id="@+id/screen2_editText8_2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:inputType="date" />

    </TableRow>
    <TableRow>
        <TextView
            android:id="@+id/layout9_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="完成日期" />

        <EditText
            android:id="@+id/screen2_editText9_2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:inputType="date" />

    </TableRow>

    <TableRow>

        <TextView
            android:id="@+id/layout10"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="會議紀錄查詢" />

    </TableRow>

    <TableRow>
        <TextView
            android:id="@+id/layout11_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="有無申請專利" />

        <CheckBox
            android:id="@+id/screen2_checkBox11_2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:onClick="onCheckboxClicked"
            android:text="是" />

        <CheckBox
            android:id="@+id/screen2_checkBox11_3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:onClick="onCheckboxClicked"
            android:text="否" />

    </TableRow>

    <TableRow>

        <Button
            android:id="@+id/screen2_button12_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="儲存"
            android:onClick="screen2_Click12_1"/>

        <Button
            android:id="@+id/screen2_button12_2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="清除"
            android:onClick="screen2_Click12_2"/>

        <Button
            android:id="@+id/screen2_button12_3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="TRIZ統整表"
            android:onClick="screen2_Click12_3"/>

        <Button
            android:id="@+id/screen2_button12_4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="下一頁"
            android:onClick="screen2_Click12_4"/>
    </TableRow>
</TableLayout>
